doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title #{title}
        script(src="https://cdn.tailwindcss.com")


    main(class="grid min-h-full place-items-center bg-white px-6 py-24 sm:py-32 lg:px-8")
        #statusBox.text-center
            h1#statusTitle(class="mt-4 text-5xl font-semibold tracking-tight text-gray-900 sm:text-7xl") ⏳ Verifying Payment...
            p#statusMessage(class="mt-6 text-lg font-medium text-gray-500 sm:text-xl") Sorry, we couldn’t find the page you’re looking for.

            .mt-10.flex.items-center.justify-center.gap-x-6
                a(href="/" class="rounded-md bg-green-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-green-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600") Go back home
                a(href="#" class="text-sm font-semibold text-gray-900") Contact support 
                    span(aria-hidden="true") &rarr;


        script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
        script(src="/js/paystack.js",  type="module")

        